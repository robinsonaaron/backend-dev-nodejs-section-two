{
  "extends": "airbnb-base",
  "plugins": [
    "import",
    "mocha"
  ],
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-var": 0,
    "comma-dangle": ["error", "never"],
    "prefer-arrow-callback": 0,
    "func-names": 0,
    "prefer-template": 0,
    "object-shorthand": 0,
    "no-use-before-define": 0,
    "arrow-body-style": 0
  },
  "overrides": [
    {
        "files": "**/*.spec.js",
        "rules": {
            "no-unused-expressions": "off"
        }
    }
]
}
